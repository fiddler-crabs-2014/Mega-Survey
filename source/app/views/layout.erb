  <script src="/js/application.js"></script>

  <title></title>
</head>
<body>
  <header>
    <span class="topper"><a href="/">Mega Survey</a></span>
    <nav>
      <ul>
        <% if true #session[:user] %>
         <li><a href="/signout">Sign out</a></li>
         <li><a href="/survey">Create Survey    ---</a></li>

         <% else %>
          <li><form id=signin method="post" action="/signin">
            <input size="10" type="text" name="login" value="" placeholder="Username">
            <input size="10" type="password" name="password" value="" placeholder="Password">
            <input type="submit" name="commit" value="Login">
          </form></li>
          <li><a href="/signup">Sign up</a></li>

        <% end %>
      </ul>
    </nav>
  </header>

  <%= yield %>
</body>
</html>
