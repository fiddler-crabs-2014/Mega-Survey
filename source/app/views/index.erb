<div class="container">
  <% if @errors %>
    <h3>Errors with creating an account!</h3>
    <% @errors.each do |error| %>
      <p><%= error %></p>
    <% end %>
  <% end %>
  <h1>Welcome to Mega Survey!</h1>

  <h2>Create Account</h2>
    <form id=signin method="post" action="/create_user">
      <input type="text" name="login" value="" placeholder="username"><br>
      <input type="password" name="password" value="" placeholder="password"><br>
      <input type="password" name="password_conf" value="" placeholder="confirm password"><br>
      <br>
      <input type="submit" name="commit" value="Register">
    </form>
</div>
